{
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "outDir": "./out-tsc",
    "allowJs": true,
    "target": "es2018",
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "rootDir": "./",
    "experimentalDecorators": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": ["./src"]
}
